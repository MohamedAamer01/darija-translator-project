{
  "manifest_version": 3,
  "name": "Traducteur English Darija",
  "version": "1.0.0",
  "description": "Traduisez entre l'anglais et le darija marocain",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ]
}